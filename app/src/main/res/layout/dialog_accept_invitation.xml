<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/surface"
    android:minWidth="300dp">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Registration"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/brand_primary"
        android:layout_marginBottom="20dp" />

    <!-- Entrant Name Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutEntrantName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrant Name"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEntrantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Terms and Conditions Checkbox -->
    <CheckBox
        android:id="@+id/checkboxTermsConditions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I accept the terms and conditions"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="24dp" />

    <!-- Accept and Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAcceptAndSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept and Submit"
        android:textColor="?attr/colorOnPrimary"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_gravity="end" />

</LinearLayout>

