<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".ui.qrscanner.QrScannerFragment">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scanning Frame Overlay -->
    <View
        android:id="@+id/scanning_frame"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Top Left Corner -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/scanning_frame"
        app:layout_constraintStart_toStartOf="@id/scanning_frame">
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@android:color/white" />
        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Top Right Corner -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="end"
        app:layout_constraintTop_toTopOf="@id/scanning_frame"
        app:layout_constraintEnd_toEndOf="@id/scanning_frame">
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@android:color/white" />
        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Bottom Left Corner -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="@id/scanning_frame"
        app:layout_constraintStart_toStartOf="@id/scanning_frame">
        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@android:color/white" />
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Bottom Right Corner -->
    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:orientation="vertical"
        android:gravity="bottom|end"
        app:layout_constraintBottom_toBottomOf="@id/scanning_frame"
        app:layout_constraintEnd_toEndOf="@id/scanning_frame">
        <View
            android:layout_width="4dp"
            android:layout_height="16dp"
            android:background="@android:color/white" />
        <View
            android:layout_width="20dp"
            android:layout_height="4dp"
            android:background="@android:color/white" />
    </LinearLayout>

    <!-- Instructions Text -->
    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/qr_scanner_instructions"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/scanning_frame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
