<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Event Image/Poster -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_container"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Event poster"
                android:background="@color/surface_alt"
                tools:src="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Name -->
        <TextView
            android:id="@+id/event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/brand_primary"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintEnd_toStartOf="@id/category_tag"
            app:layout_goneMarginEnd="0dp"
            tools:text="Edmonton Oilers" />

        <!-- Event Date -->
        <TextView
            android:id="@+id/event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/event_name"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="October 28, 2025" />

        <!-- Event Location -->
        <TextView
            android:id="@+id/event_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toBottomOf="@id/event_date"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Rogers Place" />

        <!-- Category Tag -->
        <com.google.android.material.chip.Chip
            android:id="@+id/category_tag"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sports"
            android:textSize="11sp"
            android:textStyle="bold"
            app:chipStrokeWidth="0dp"
            app:chipMinHeight="24dp"
            app:closeIconEnabled="false"
            app:layout_constraintTop_toTopOf="@id/event_name"
            app:layout_constraintBottom_toBottomOf="@id/event_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Sports" />

        <!-- Location Enabled Chip -->
        <com.google.android.material.chip.Chip
            android:id="@+id/location_chip"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="ðŸ“ Location"
            android:textSize="11sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:chipStrokeWidth="0dp"
            app:chipMinHeight="24dp"
            app:closeIconEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/event_location"
            app:layout_constraintStart_toEndOf="@id/image_container"
            app:layout_constraintEnd_toStartOf="@id/waitlist_status"
            tools:text="ðŸ“ Location" />

        <!-- Waitlist Status Bubble -->
        <com.google.android.material.chip.Chip
            android:id="@+id/waitlist_status"
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:text="PENDING"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/status_pending"
            app:chipBackgroundColor="@color/status_pending_bg"
            app:chipStrokeWidth="0dp"
            app:chipMinHeight="28dp"
            app:closeIconEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/event_location"
            app:layout_constraintStart_toEndOf="@id/location_chip"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="PENDING" />

        <!-- Barrier to handle both location and chips -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/content_barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="event_location,waitlist_status,location_chip" />

        <!-- Separator line between events -->
        <View
            android:id="@+id/separator_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/content_barrier"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

