<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top bar with back arrow -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingTop="12dp"
            android:paddingEnd="12dp"
            android:paddingBottom="4dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="Back"
                app:tint="@color/brand_primary"
                android:src="@drawable/ic_back" />
        </LinearLayout>

        <!-- Header image in a card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Event image"
                tools:src="@mipmap/ic_launcher" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Title -->
        <TextView
            android:id="@+id/eventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Air Show"
            android:textColor="@color/brand_primary"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

        <!-- Status label -->
        <TextView
            android:id="@+id/statusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp" />

        <!-- Status chip -->
        <TextView
            android:id="@+id/statusChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENDING"
            android:textStyle="bold"
            android:textColor="@color/status_pending"
            android:background="@color/status_pending_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Abandon button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/abandonButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abandon"
            android:textColor="@color/text_primary"
            app:strokeColor="@color/border"
            app:iconGravity="textStart"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Attendees avatar stack (static demo) -->
        <LinearLayout
            android:id="@+id/attendeesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_primary_light"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="K"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="-12dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_accent"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="-12dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_primary_dark"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+2"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Description header -->
        <TextView
            android:id="@+id/descriptionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- Description body -->
        <TextView
            android:id="@+id/descriptionBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="This is an airshow that will be attended by many companies and countries. Jets like Russian made Sukhoi's will be on display.." />

        <!-- Info rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <!-- Date row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="October 30, 2025"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Organization row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="National Airlines Council"
                android:textColor="@color/brand_primary"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Location row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Swan Airfield"
                android:textColor="@color/brand_primary"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Price row -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="$150.00 CAD"
                android:textColor="@color/brand_primary"
                android:drawableStart="@drawable/ic_attach_money"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


