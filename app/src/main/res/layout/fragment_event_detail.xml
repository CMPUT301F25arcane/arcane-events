<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header image - rounded rectangle with margins -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/surface_alt">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:scaleType="fitCenter"
                android:contentDescription="Event image"
                android:background="@color/surface_alt"
                android:adjustViewBounds="true"
                tools:src="@mipmap/ic_launcher" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Title with Edit Icon (for organizer) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Air Show"
                android:textColor="@color/brand_primary"
                android:textStyle="bold"
                android:textSize="28sp"
                android:letterSpacing="0.02" />

            <!-- Edit Icon (shown for organizer) - circular white button with pencil -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/editEventButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="@color/surface"
                app:cardElevation="2dp"
                app:strokeColor="?attr/colorPrimary"
                app:strokeWidth="2dp"
                android:visibility="gone"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_edit"
                    android:contentDescription="Edit Event"
                    app:tint="?attr/colorPrimary" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Lottery Status and Send Notification Button Row (for organizer) -->
        <LinearLayout
            android:id="@+id/lotteryStatusAndNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/lotteryStatusText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lottery Open"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp" />

            <!-- Send Notification Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendNotificationButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notification"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:backgroundTint="@color/brand_primary_light"
                app:strokeColor="@color/text_primary"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Status and Decision Row (for users) -->
        <LinearLayout
            android:id="@+id/statusDecisionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Status label and chip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/statusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <!-- Status chip -->
                <TextView
                    android:id="@+id/statusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/status_pending"
                    android:background="@color/status_pending_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>

            <!-- Decision label and chip (shown when status is won/accepted/declined) -->
            <LinearLayout
                android:id="@+id/decisionRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/decisionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decision:"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <!-- Decision chip -->
                <TextView
                    android:id="@+id/decisionChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NONE"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:background="@color/surface_alt"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- User Action Buttons Container (for joined users) -->
        <!-- Abandon Button (shown when status == waiting) -->
        <LinearLayout
            android:id="@+id/abandonButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/abandonButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abandon Waitlist"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border" />
        </LinearLayout>

        <!-- Accept and Decline Buttons (shown when status == won and decision == none) -->
        <LinearLayout
            android:id="@+id/acceptDeclineButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Accept"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/declineButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border" />
        </LinearLayout>

        <!-- Total Entrants Count (for entrants) -->
        <LinearLayout
            android:id="@+id/totalEntrantsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/totalEntrantsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Entrants:"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/totalEntrantsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Join Button (for Global Events - not joined yet) -->
        <LinearLayout
            android:id="@+id/joinButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/joinButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waitlist"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Send Notification Container (for organizer, shown separately if needed) -->
        <LinearLayout
            android:id="@+id/sendNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendNotificationButtonStandalone"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notification"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:backgroundTint="@color/brand_primary_light"
                app:strokeColor="@color/text_primary"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp" />
        </LinearLayout>

        <!-- Description Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp">

            <!-- Description header -->
            <TextView
                android:id="@+id/descriptionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold"
                android:textColor="@color/brand_primary"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Description body -->
            <TextView
                android:id="@+id/descriptionBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:text="This is an airshow that will be attended by many companies and countries. Jets like Russian made Sukhoi's will be on display.." />
        </LinearLayout>

        <!-- Event Details Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Date row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_calendar"
                    android:contentDescription="Date"
                    app:tint="@color/text_primary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/eventDateText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="October 30, 2025"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Location row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_location"
                    android:contentDescription="Location"
                    app:tint="@color/text_primary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/eventLocationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Swan Airfield"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <!-- Price row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_attach_money"
                    android:contentDescription="Price"
                    app:tint="@color/text_primary"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/eventPriceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$150.00 CAD"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center_vertical" />
            </LinearLayout>
        </LinearLayout>

        <!-- Organizer Action Buttons (Bottom) -->
        <LinearLayout
            android:id="@+id/organizerActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="88dp"
            android:visibility="gone">

            <!-- Top Row: QR Code and Entrants (side by side) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- QR Code Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/qrCodeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="QR Code"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brand_primary_light"
                    app:strokeColor="@color/text_primary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp" />

                <!-- Entrants Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/entrantsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entrants"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:backgroundTint="@color/brand_primary_light"
                    app:strokeColor="@color/text_primary"
                    app:strokeWidth="2dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

            <!-- Draw Lottery Button (centered, full width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawLotteryButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw Lottery!"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:backgroundTint="@color/brand_primary_light"
                app:strokeColor="@color/text_primary"
                app:strokeWidth="2dp"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


