<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <!-- Header image in a card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Event image"
                tools:src="@mipmap/ic_launcher" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Title with Edit Icon (for organizer) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Air Show"
                android:textColor="@color/brand_primary"
                android:textStyle="bold"
                android:textSize="26sp" />

            <!-- Edit Icon (shown for organizer) -->
            <ImageButton
                android:id="@+id/editEventButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="Edit Event"
                android:src="@android:drawable/ic_menu_edit"
                app:tint="@color/brand_primary"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Lottery Status Text (for organizer) -->
        <TextView
            android:id="@+id/lotteryStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lottery Open"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

        <!-- Status and Decision Row (for users) -->
        <LinearLayout
            android:id="@+id/statusDecisionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <!-- Status label and chip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/statusLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status:"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <!-- Status chip -->
                <TextView
                    android:id="@+id/statusChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/status_pending"
                    android:background="@color/status_pending_bg"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>

            <!-- Decision label and chip (shown when status is won/accepted/declined) -->
            <LinearLayout
                android:id="@+id/decisionRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/decisionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decision:"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <!-- Decision chip -->
                <TextView
                    android:id="@+id/decisionChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NONE"
                    android:textStyle="bold"
                    android:textColor="@color/text_secondary"
                    android:background="@color/surface_alt"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- User Action Buttons Container (for joined users) -->
        <!-- Abandon Button (shown when status == waiting) -->
        <LinearLayout
            android:id="@+id/abandonButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/abandonButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abandon Waitlist"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border" />
        </LinearLayout>

        <!-- Accept and Decline Buttons (shown when status == won and decision == none) -->
        <LinearLayout
            android:id="@+id/acceptDeclineButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Accept"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/declineButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Decline"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border" />
        </LinearLayout>

        <!-- Join Button (for Global Events - not joined yet) -->
        <LinearLayout
            android:id="@+id/joinButtonContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/joinButton"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join Waitlist"
                android:textColor="?attr/colorOnPrimary"
                android:backgroundTint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Send Notification button (Organizer View) -->
        <LinearLayout
            android:id="@+id/sendNotificationContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sendNotificationButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send Notification"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border" />
        </LinearLayout>

        <!-- Attendees avatar stack (static demo) -->
        <LinearLayout
            android:id="@+id/attendeesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="16dp"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_primary_light"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="K"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="-12dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_accent"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="G"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="-12dp"
                    app:cardCornerRadius="18dp"
                    app:cardBackgroundColor="@color/brand_primary_dark"
                    app:strokeColor="@color/surface"
                    app:strokeWidth="1dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="+2"
                        android:textColor="@color/on_brand"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- Description header -->
        <TextView
            android:id="@+id/descriptionHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" />

        <!-- Description body -->
        <TextView
            android:id="@+id/descriptionBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:lineSpacingExtra="2dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="This is an airshow that will be attended by many companies and countries. Jets like Russian made Sukhoi's will be on display.." />

        <!-- Info rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp">

            <!-- Date row -->
            <TextView
                android:id="@+id/eventDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="October 30, 2025"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Organization row -->
            <TextView
                android:id="@+id/organizerNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="National Airlines Council"
                android:textColor="@color/brand_primary"
                android:drawableStart="@android:drawable/ic_menu_info_details"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Location row -->
            <TextView
                android:id="@+id/eventLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Swan Airfield"
                android:textColor="@color/brand_primary"
                android:drawableStart="@android:drawable/ic_menu_mylocation"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />

            <!-- Price row -->
            <TextView
                android:id="@+id/eventPriceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="$150.00 CAD"
                android:textColor="@color/brand_primary"
                android:drawableStart="@drawable/ic_attach_money"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                app:drawableTint="@color/brand_primary" />
        </LinearLayout>

        <!-- Organizer Action Buttons (Bottom) -->
        <LinearLayout
            android:id="@+id/organizerActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="88dp"
            android:visibility="gone">

            <!-- Top Row: QR Code and Entrants (side by side) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <!-- QR Code Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/qrCodeButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="QR Code"
                    android:textColor="@color/text_primary"
                    app:strokeColor="@color/border"
                    app:cornerRadius="8dp" />

                <!-- Entrants Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/entrantsButton"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Entrants"
                    android:textColor="@color/text_primary"
                    app:strokeColor="@color/border"
                    app:cornerRadius="8dp" />
            </LinearLayout>

            <!-- Draw Lottery Button (centered, full width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/drawLotteryButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Draw Lottery!"
                android:textColor="@color/text_primary"
                app:strokeColor="@color/border"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>


